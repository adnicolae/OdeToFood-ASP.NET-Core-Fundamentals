
@model OdeToFood_CoreFundamentals.Entities.Restaurant

@{ 
    ViewBag.Title = "Create";
}
<div>
    <h1>Create restaurant</h1>
    
    <div>
        @using (Html.BeginForm())
        {
            <div>
                @Html.LabelFor(m => m.Name)
                @Html.EditorFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div>
                @Html.LabelFor(m => m.Cuisine)
            <!--                
                // to create a dropdown list, the dropdownlistfor requires a list parameter which can be taken from an edit view model
                // in our case, the enum written in Restaurant can be used by Html.GetEnumSelectList 
                -->
                @Html.DropDownListFor(m => m.Cuisine, Html.GetEnumSelectList(typeof(CuisineType)))
                @Html.ValidationMessageFor(m => m.Cuisine)
            </div>
            <div>
                <input type="submit" value="Save!"/>
            </div>
        }
    </div>
</div>
